# Terraform Variables Configuration
# Copy this file to terraform.tfvars and update with your values

aws_region   = "us-east-1"
environment  = "production"
project_name = "todo-app"

# Network Configuration
vpc_cidr           = "10.0.0.0/16"
public_subnet_cidr = "10.0.1.0/24"

# EC2 Configuration
instance_type = "t3.micro" # Free tier eligible

# Security Configuration
# IMPORTANT: Replace with your actual IP for better security
# Find your IP: curl ifconfig.me
ssh_allowed_ips = ["0.0.0.0/0"] # Change to ["YOUR_IP/32"]

# SSH Key Configuration
# Generate key: ssh-keygen -t rsa -b 4096 -f ~/.ssh/todo-app-key
# Then copy the public key content here
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAACAQD... your-email@example.com"

# GitHub Repository
github_repo = "https://github.com/harshit-kandhwe/CI-CD-Project.git"